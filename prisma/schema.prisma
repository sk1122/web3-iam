generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  address     String    @id
  name        String
  lastLoginAt DateTime  @default(now())
  projects    Project[]
  refreshTokens RefreshToken[]
}

model RefreshToken {
  id          String   @id @unique @default(uuid())
  hashedToken String
  userId      String
  user        User     @relation(fields: [userId], references: [address], onDelete: Cascade)
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id       String    @id @default(uuid())
  name     String
  key      String    @default(uuid())
  userId   String    @unique
  user     User      @relation(fields: [userId], references: [address], onDelete: Cascade)
  iamUsers IamUser[]
  events   Event[]
}

model Event {
  id         String     @id @default(uuid())
  name       String
  eventId    String     @default("")
  data       Json
  blockchain Blockchain
  projectId  String
  project    Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  iamUserId  String
  iamUser    IamUser    @relation(fields: [iamUserId], references: [id], onDelete: Cascade)
  createdAt  DateTime   @default(now())
}

model IamUser {
  id          String       @id @default(uuid())
  address     String
  projectId   String
  transactionExecuted Int @default(0)
  transactionVolume Int @default(0)
  blockchains Blockchain[]
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  events      Event[]

  @@unique([address, projectId])
}

enum Blockchain {
  ETHEREUM
  POLYGON
  SOLANA
}
